# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# For Docker/production (PostgreSQL):
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/noti
# For local development (SQLite):
# DATABASE_URL=sqlite:///db.sqlite3
# For local development (PostgreSQL):
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/noti

# PostgreSQL Container Configuration
POSTGRES_DB=noti
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Celery/Redis Configuration
CELERY_BROKER_URL=redis://redis:6379/0

# APNs Configuration
# You need to get these from your Apple Developer account
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apple-team-id
APNS_BUNDLE_ID=com.yourcompany.yourapp
APNS_CERTIFICATE_PATH=/path/to/apns/certificate.pem
APNS_USE_SANDBOX=True

# Logging
DJANGO_LOG_LEVEL=INFO
